<script>
function showTool(toolId) {
// Hide all tool interfaces
document.querySelectorAll('.tool-interface').forEach(tool => {
tool.style.display = 'none';
});
 
// Remove active class from all nav items
document.querySelectorAll('.nav-item').forEach(item => {
item.classList.remove('active');
});
 
// Show selected tool
if (toolId === 'upload') {
document.getElementById('upload-interface').style.display = 'block';
} else if (toolId === 'chatbot') {
document.getElementById('chatbot-interface').style.display = 'block';
} else if (toolId === 'parser') {
document.getElementById('parser-interface').style.display = 'block';
}
 
// Add active class to clicked nav item
event.target.closest('.nav-item').classList.add('active');
}
 
// Simulate progress bar animation
setInterval(() => {
const progressBar = document.querySelector('.progress-fill');
if (progressBar) {
let currentWidth = parseInt(progressBar.style.width) || 65;
if (currentWidth < 100) {
progressBar.style.width = (currentWidth + 1) + '%';
}
}
}, 100);
</script>
